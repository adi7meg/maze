<!--background image start-->
<div class="login-bg">
  <%= image_tag('image 64.png') %>
</div>
<!--background image end-->

<!--login navbar start-->
<div class="login-header">
  <div><%= image_tag ('Frame 39.png') %> </div>
  <div>Maze</div>
</div>
<!--login navbar end-->






<div class="signup-div">
  <div class="create-account-png"><%= image_tag('Create account.png') %></div>
  <div class="create-account-png"><%= image_tag('for.png') %></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
           <div class="name-lastname">
  <div class="field email-label-input">
    <%= f.label :name %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field email-label-input">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </div>

</div>

           <div class="email-phone">
      <div class="field email-label-input">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field email-label-input">
        <%= f.label :phone %><br />
        <%= f.text_field :phone %>
      </div>
    </div>

           <div class="password-confirmPassword">
      <div class="field email-label-input">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field email-label-input">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <div class="actions Sign-up-button">
      <%= f.submit "Sign up" %>
      <%= render "devise/shared/links" %>
    </div>
    </div>

  <% end %>

  <hr style="height:2px;border-width:0" class="navbar-line">

<!--</div>-->

